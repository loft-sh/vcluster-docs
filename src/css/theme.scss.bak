/* Dark Theme Variables */
[data-theme='dark'] {
  --ifm-background-color: #121212;
  --ifm-background-surface-color: #1e1e1e;
  --ifm-font-color-base: #e0e0e0;
  --ifm-font-color-secondary: #b0b0b0;
  --ifm-link-color: #61dafb;
  --ifm-color-white: #ffffff;
  --ifm-color-gray-700: #2a2a2a;
  --ifm-color-gray-800: #1f1f1f;
  --ifm-color-gray-300: #b0b0b0;
  --docusaurus-highlighted-code-line-bg: rgba(66, 66, 66, 0.35);
}

/* Tabs */
.tabs-container [class*='tabItem'] {
  background-color: var(--ifm-background-surface-color);
  color: var(--ifm-font-color-base);
  padding: 1rem;
  border-radius: var(--ifm-code-border-radius);
}

.tabs-container [class*='tabItem'] p,
.tabs-container [class*='tabItem'] a {
  color: var(--ifm-font-color-base);
}

/* Footer */
.footer {
  background-color: var(--ifm-background-surface-color);
  color: var(--ifm-font-color-base);
}

/* Navbar */
.navbar__link,
.dropdown__link {
  color: var(--ifm-font-color-base);
}

.navbar__link--active,
.dropdown__link--active {
  color: var(--ifm-link-color);
}

/* Dark Theme Adjustments */
[data-theme='dark'] .navbar__link,
[data-theme='dark'] .dropdown__link {
  color: var(--ifm-font-color-base);
}

[data-theme='dark'] .navbar__link--active,
[data-theme='dark'] .dropdown__link--active {
  color: var(--ifm-link-color);
}

/* Dropdown Menu */
[data-theme='dark'] .dropdown__menu {
  background-color: var(--ifm-background-surface-color);
}

[data-theme='dark'] .dropdown__menu .dropdown__link:hover,
[data-theme='dark'] .dropdown__menu .dropdown__link:focus {
  background-color: var(--ifm-color-gray-800);
}

/* Documentation Content */
[data-theme='dark'] .theme-doc-markdown {
  background-color: var(--ifm-background-color);
  color: var(--ifm-font-color-base);
}

/* Remove white background from details elements */
[data-theme='dark'] .theme-doc-markdown details {
  background-color: transparent;
  border: none;
  margin-bottom: 0.5rem;
}

[data-theme='dark'] .theme-doc-markdown details summary {
  background-color: var(--ifm-background-color) !important;
  color: var(--ifm-font-color-base);
  border: none;
  border-radius: var(--ifm-global-radius);
}

[data-theme='dark'] .theme-doc-markdown details summary::before {
  border-left-color: var(--ifm-color-primary);
}

[data-theme='dark'] .theme-doc-markdown details > div {
  background-color: var(--ifm-background-color);
  border: none;
}

.theme-doc-markdown details > summary:hover {
  background-color: var(--ifm-color-gray-700);
}

/* Input field styles */
[data-theme='dark'] input,
[data-theme='dark'] select {
  background-color: var(--ifm-background-surface-color);
  color: var(--ifm-font-color-base);
  border: 1px solid var(--ifm-color-gray-700);
}

/* Hover and focus states for inputs */
[data-theme='dark'] input:hover,
[data-theme='dark'] input:focus,
[data-theme='dark'] select:hover,
[data-theme='dark'] select:focus {
  border-color: var(--ifm-color-primary);
}
[data-theme='dark'] .github-link::before {
    filter: invert(1);
}

[data-theme='dark'] .slack-link::before {
    filter: invert(1);
}