# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
trim_trailing_whitespace = true
insert_final_newline = false

[*.go]
indent_size = 8
indent_style = tab

[*.md]
trim_trailing_whitespace = true
insert_final_newline = true

[*.mdx]
trim_trailing_whitespace = true
insert_final_newline = true

[*.{css,html,js,json,sass,md,mmark,toml,yaml}]
indent_style = space
indent_size = 2

[*.{sh}]
indent_style = space
indent_size = 4

[*.{yaml}]
insert_final_newline = true
